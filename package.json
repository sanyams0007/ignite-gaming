{
  "name": "ignite-gaming",
  "version": "1.0.0",
  "description": "Full fledged ecommerce app using MERN Stack",
  "main": "server.js",
  "engines": {
    "npm": "7.6.1",
    "node": "12.18.3"
  },
  "scripts": {
    "client": "cd client && npm run start",
    "build": "cd client && npm run build",
    "server:dev": "SET NODE_ENV=DEVELOPMENT& nodemon ./server/server.js",
    "server:prod": "SET NODE_ENV=PRODUCTION& nodemon ./server/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run client\"",
    "prod": "concurrently --kill-others-on-fail \"npm run server:prod\" \"npm run client\"",
    "start": "node ./server/server.js",
    "seeder": "node ./server/utils/seeder.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "author": "Sanyam Suthar",
  "license": "ISC",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.25.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-sslify": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.0",
    "nodemailer": "^6.5.0",
    "stripe": "^8.145.0",
    "validator": "^13.5.2"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.7"
  }
}
